{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/bin/www",
      "env": {
        "NODE_ENV": "development"
      },
      "stopOnEntry": false,
      "runtimeArgs": ["--nolazy", "--exec", "babel-node"],
      "sourceMaps": true,
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
